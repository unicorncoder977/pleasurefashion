<%-include('../partials/header')%>
<%-include('../partials/searchForm')%>
<link rel="stylesheet" href="/stylesheets/main.css">
<link rel="stylesheet" href="/stylesheets/products/products.css">



   <%if(products.length<1){%>
      <h4>result not found</h4>

      <%} else{%>
         <section class="products">
            <%-include('../partials/backArrow')%>


            <div class="products__container">

               <%products.forEach(function(product){%>


                  <span  class="product">

                     <div class="image__container">
                       <a href="/products/<%=product._id%>">
                     <img src="<%=product.image%>" alt="" class="product__image">
                  </a>

                     </div>

                     <div class="product__footer">
                           <div class="product__info">
                              <h1 class="product__name">
                                 <%=product.name%>
                              </h1>
                           
                           
                              <span class="product__price">â‚¹<%=product.price%></span>
                           
                           </div>

                           <div class="heart">
                                    <%if(product.wishlist.includes(currentUser._id)){%>
                                       <i product_id='<%=product._id%>' class="added heart__icon fas fa-heart"></i>
                                    
                                       <%}else{%>
                                          <i product_id='<%=product._id%>' class="heart__icon fas fa-heart"></i>
                                    
                                    
                                          <%}%>
                           </div>
                     </div>
                    


                  
                     
                  
                
                     
                   

                   
                
          
                       

                  </span>


                  <%});%>
            </div>

         </section>

         <%}%>
   <script src="/scripts/products.js"></script>


            <%-include('../partials/footer')%>